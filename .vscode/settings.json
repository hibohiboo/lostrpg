// ユーザ設定を上書き
{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  // エディターで制御文字を表示する必要があるかどうかを制御します
  "editor.renderControlCharacters": true,
  // フォント ファミリを制御します。
  "editor.fontFamily": "'MS Gothic'",
  // 改行コードを設定
  "files.eol": "\n",
  // エディターで空白文字を表示する方法を制御します。'none'、'boundary' および 'all' が使用可能です。'boundary' オプションでは、単語間の単一スペースは表示されません。
  "editor.renderWhitespace": "all",
  "typescript.tsdk": "./node_modules/typescript/lib"
    // 有効な場合、ファイルを開くときに文字セット エンコードを推測します
    //,"files.autoGuessEncoding": false,
  // Flowに対する拡張
  //,"javascript.validate.enable": false
  //,"files.associations": {"*.js": "flow"}
  ,"files.associations": {
    "*.js": "javascriptreact"
  }
  ,"javascript.validate.enable": false
  , "terminal.integrated.profiles.windows": {
   // Git Bash
   "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

  }
}