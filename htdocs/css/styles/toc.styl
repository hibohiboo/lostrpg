.transition--300 {
  transition: all 300ms ease-in-out;
}
.toc {
  height: 100%;
  width: 280px;
  transform: translateX(0);
  box-sizing: content-box;
}
.content {
  position: relative;
}
.content h1:first-child,
.content h2:first-child {
  padding-top: 0;
  margin-top: 0;
}

